<% if signed_in? %>
  <nav class="managenav">
  	<span class="managelogo">UCDNews</span>
    <%= link_to "首页", root_path %>
    <%if current_user.admin? %>
      <%= link_to "添加文章", new_post_path %>
      <%= link_to "管理文章", posts_path %>
      <%= link_to "期刊管理", journals_path %>
      <%= link_to "类别设置", categories_path %>
    <% end %>
    <%= link_to "退出", signout_path, method: "delete" %>
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </nav>
<% else %>
  <header>
    <%= link_to "UCDNews", root_path, class: "logo" %>
    <% if ! @journal.nil? %>
      <span class="time"><%= @journal.starttime.strftime("%Y.%m.%d") %> ~ <%= @journal.endtime.strftime("%m.%d") %>(第<%= @journal.journalnum %>期)</span>
    <% end %>
  </header>
<% end %>

