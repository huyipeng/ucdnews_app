<% provide(:title, "修改文章") %>

<section class="panel newpanel">
	<h3>修改文章</h3>
	<%= form_for(@post) do |f| %>	
	    <%= render 'shared/error_categories', object: f.object %>	
	    <p><%= f.text_field :title, placeholder: "文章标题" %></p>
	    <p><%= f.text_field :link, placeholder: "文章链接" %></p>
	    <p><%= f.text_area :note, placeholder: "备注..." %></p>
	    <p><%= f.text_field :author, placeholder: "作者" %></p>
	    <p>
            <label>文章类别：</label>
            <%= f.select :category_id, options_for_select( @categories.map{ |c| [c.content,c.id]},:selected => f.object.category_id )%>
        </p>
        <p>
        	<label>期刊号：</label>
        	<%= f.select :journal_id, options_for_select( @journals.map{ |c| [c.journalnum, c.id]}, :selected => f.object.journal_id ) %>
        </p>
	    <p class="submit"><%= f.submit "更  新" %></p>
	<% end %>
</section>